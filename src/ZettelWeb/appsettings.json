{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": []
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Embedding": {
    "Provider": "ollama",
    "Model": "nomic-embed-text",
    "Dimensions": 768,
    "ApiKey": "",
    "OllamaUrl": "http://localhost:11434",
    "HttpTimeoutSeconds": 300,
    "BedrockRegion": "",
    "MaxInputCharacters": 4000,
    "MaxRetries": 3
  },
  "Search": {
    "SemanticWeight": 0.7,
    "FullTextWeight": 0.3,
    "MinimumSimilarity": 0.5,
    "MinimumHybridScore": 0.1,
    "SuggestionThreshold": 0.3
  },
  "ContentGeneration": {
    "Provider": "openai",
    "Model": "gpt-4o",
    "Region": "",
    "ApiKey": "not-configured",
    "MaxTokens": 4096,
    "Temperature": 0.7,
    "MaxClusterSize": 10,
    "MinClusterSize": 3,
    "MaxSeedRetries": 3,
    "SemanticThreshold": 0.75,
    "Schedule": {
      "Blog": {
        "Enabled": false,
        "DayOfWeek": "Monday",
        "TimeOfDay": "09:00"
      },
      "Social": {
        "Enabled": false,
        "TimeOfDay": "09:00"
      }
    }
  },
  "Capture": {
    "AllowedEmailSenders": [],
    "AllowedTelegramChatIds": [],
    "TelegramBotToken": "",
    "EnrichmentTimeoutSeconds": 10,
    "EnrichmentMaxRetries": 3,
    "SqsQueueUrl": "",
    "SqsRegion": ""
  }
}
