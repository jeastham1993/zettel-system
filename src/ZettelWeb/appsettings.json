{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Embedding": {
    "Provider": "ollama",
    "Model": "nomic-embed-text",
    "Dimensions": 768,
    "ApiKey": "",
    "OllamaUrl": "http://localhost:11434",
    "MaxInputCharacters": 4000,
    "MaxRetries": 3
  },
  "Search": {
    "SemanticWeight": 0.7,
    "FullTextWeight": 0.3,
    "MinimumSimilarity": 0.5,
    "MinimumHybridScore": 0.1
  },
  "Capture": {
    "AllowedEmailSenders": [],
    "AllowedTelegramChatIds": [],
    "TelegramBotToken": "",
    "EnrichmentTimeoutSeconds": 10,
    "EnrichmentMaxRetries": 3,
    "SqsQueueUrl": "",
    "SqsRegion": ""
  }
}
